<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlocNotas">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="161dp"
        android:layout_height="0dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_notas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ust" />

    <EditText
        android:id="@+id/txt_notas"
        android:layout_width="334dp"
        android:layout_height="336dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="41dp"
        android:background="#E4C4EA"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/hint"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/btn_guardarNotas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/btn_guardarNotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="88dp"
        android:onClick="GuardarNotas"
        android:text="@string/btn_guardarNotas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_notas"
        app:layout_constraintTop_toBottomOf="@+id/txt_notas" />
</androidx.constraintlayout.widget.ConstraintLayout>